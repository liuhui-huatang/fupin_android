<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_message_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">
    <include layout="@layout/new_top"/>



    <EditText
        android:layout_margin="10dp"
        android:id="@+id/et_title"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_bg_normal"
        android:hint="请输入标题："
        android:padding="15dp"
        android:textSize="14sp" />






    <EditText
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/activity_pingjia_et"
        android:gravity="top"
        android:hint="请输入留言内容："
        android:padding="15dp"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingLeft="5dp">

        <ImageView
            android:id="@+id/iv_sign_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="7dp"
            android:src="@mipmap/img_addphoto"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_sign_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="7dp"
            android:src="@mipmap/img_addphoto"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_sign_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="7dp"
            android:src="@mipmap/img_addphoto"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_sign_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="7dp"
            android:src="@mipmap/img_addphoto"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/iv_sign_add1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="7dp"
            android:src="@mipmap/img_addphoto" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingLeft="5dp">

        <ImageView
            android:id="@+id/iv_sign_6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="7dp"
            android:src="@mipmap/img_addphoto"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_sign_7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="7dp"
            android:src="@mipmap/img_addphoto"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_sign_8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="7dp"
            android:src="@mipmap/img_addphoto"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_sign_9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="7dp"
            android:src="@mipmap/img_addphoto"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/iv_sign_add_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="7dp"
            android:src="@mipmap/img_addphoto"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
